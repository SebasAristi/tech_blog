 <form class="form edit-post-form">
   <input type="hidden" name="" id="post-id" value="{{post.id}}">
      <div class="form-group">
        <label for="title">Title:</label>
        <input class="form-input" type="text" id="title" value="{{post.title}}"/>
      </div>
      <div class="form-group">
        <label for="body">Content:</label>
        <textarea class="form-input"  id="body" >{{post.body}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update My Post</button>
        <button class="btn btn-primary" id="delete" type="button">Delete My Post</button>
      </div>
    </form>

    <script src="/js/edit.js"></script>