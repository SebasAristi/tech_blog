<h1>{{post.title}}</h1>
<p>{{post.body}}</p>

{{#if logged_in}}
<form class="form add-comment-form">

    <div class="form-group">
        <input type="hidden" id="post-id" value="{{post.id}}">
        <label for="Comment">Add Comment:</label>
        <textarea class="form-input" id="body"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Add my Comment</button>
    </div>
</form>
{{/if}}


<section>
  
    {{#each post.Comments}}
    <div>
        <p>{{body}}</p>

        <p>Posted by {{user.username}} on {{format_date createdAt}}</p>
    </div>
    {{/each }}

   
</section>

<script src="/js/comment.js"></script>